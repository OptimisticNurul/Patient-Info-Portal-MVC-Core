@model PatientInfoPortal.Models.Patient

@{
    ViewData["Title"] = "Delete";
}

<h1>DeleteConfirmed</h1>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>Patient</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.DiseaseName)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.DiseaseName)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Epilepsy)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Epilepsy)
        </dd>
        <dt class="col-sm-2">
            NCDs
        </dt>
        <dd class="col-sm-10">
            @foreach (var ncd in Model.PatientNCDs)
            {
                @ncd.NCD <br />
            }
        </dd>
        <dt class="col-sm-2">
            Allergies
        </dt>
        <dd class="col-sm-10">
            @foreach (var allergy in Model.PatientAllergies)
            {
                @allergy.Allergy <br />
            }
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-action="Index">Back to List</a>
    </form>
</div>
