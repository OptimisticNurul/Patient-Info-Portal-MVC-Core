<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - PatientInfoPortal</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <style>
        body {
            background-color: #f8f9fa; 
        }

        .navbar {
            background-color: #28a745; 
        }

        .navbar-brand,
        .nav-link {
            color: white !important;
        }

            .nav-link:hover {
                color: #d4d4d4 !important; 
            }

        .navbar .btn {
            color: white;
            background-color: #28a745;
            border: none;
            margin-left: 10px;
        }

            .navbar .btn:hover {
                color: white;
                background-color: #218838; 
            }

        .main-content {
            background-color: white;
            padding: 20px;
            border-radius: 5px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        }

        .jumbotron {
            background-color: #28a745;
            color: white;
            padding: 2rem 1rem;
            border-radius: 5px;
        }

            .jumbotron h1 {
                font-size: 2.5rem;
            }

            .jumbotron p {
                font-size: 1.2rem;
            }
    </style>
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-light bg-success">
    <a class="navbar-brand" href="http://localhost:5117/">PatientInfoPortal</a>
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarNav">
        <ul class="navbar-nav mr-auto">
        </ul>
        <ul class="navbar-nav ml-auto">
            <li class="nav-item">
                <a class="nav-link btn btn-success" asp-controller="Home" asp-action="Index">Home</a>
            </li>
        </ul>
        <ul class="navbar-nav ml-auto">
            <li class="nav-item">
                <a class="nav-link btn btn-success" asp-controller="Patients" asp-action="Index">Show Patient</a>
            </li>
            <li class="nav-item">
                <a class="nav-link btn btn-success" asp-controller="Patients" asp-action="Create">Patient Form</a>
            </li>
        </ul>
    </div>
</nav>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
